ALGORITMO num4_recursivo
INICIO

    FUNÇÃO INTEIRO: somat(INTEIRO:N)
    INICIO

        SE N == 0
            ENTÃO RETORNE 0;
            SENÃO RETORNE N + somat(N-1);
    FIM.

    ALGORITMO PRINCIPAL
    INICIO

        VAR INTEIRO: n;

        ESCREVA "digite o valor para N:";
        LEIA n;

        ESCREVA "a soma de 0 até",n,"é",somat(n);
    FIM.
FIM.

        