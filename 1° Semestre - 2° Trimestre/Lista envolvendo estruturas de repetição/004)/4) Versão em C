#include <stdio.h>
#include <locale.h>

int main(){

    setlocale(LC_ALL,"Portuguese");

    int r_ant, rfinal, soma, i;
    rfinal=1;
    r_ant=0;

    for(i=0;i<20;i++){

        soma = r_ant + rfinal;
        rfinal = r_ant;
        r_ant = soma;

        printf("%dÂ° termo = %d\n",i+1,soma);
    }
    return  0;
}
