#include <stdio.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL,"Portuguese");

    float num ;

    printf("Digite um número e veja se ele é maior que 80, menor que 25 ou igual a 40:\n") ;
    scanf("%f",&num);

    if(num == 40){
        printf("O número é igual a 40 !\n");
    }
    else if( num > 80){
        printf("O número é maior que 80 !\n");
    }
    else if( num < 25){
        printf("O número é menor que 25 ! \n");
    }

    getch();
    return 0;
}
