ALGORITMO num6_iterativo
INÍCIO

    FUNÇÃO INTEIRO: somat(VAR INTEIRO: vet[],INTEIRO:tam)
    INÍCIO
            
        VAR INTEIRO:i,soma=0;

        PARA i DE 1 ATÉ tam FAÇA
            soma = soma + vet[i];
        FIM_PARA;

        RETORNE soma;
    FIM.

    ALGORITMO PRINCIPAL
    INÍCIO

        VAR INTEIRO: tama,vetor[100],i,res;

        ESCREVA "Digite o tamanho do vetor:";
        LEIA tama;

        PARA i DE 1 ATÉ tama FAÇA
             ESCREVA "V[",i,"]=";
             LEIA vetor[i];
         FIM_PARA;

        res = somat(vetor,tama);

        ESCREVA "A soma é:",res;
    FIM.
FIM.
