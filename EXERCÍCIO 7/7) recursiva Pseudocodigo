ALGORITMO num7_recursivo
INÍCIO

    FUNÇÃO INTEIRO: somacubo(INTEIRO: n)
    INÍCIO

        SE n == 1
            ENTÃO RETORNE 1;
            SENÃO RETORNE n*n*n + somacubo(n-1); // em sala foi usado outra função chamada potencia pra isso ao invés de n*n*n
    FIM.

    ALGORITMO PRINCIPAL
    INÍCIO

        VAR INTEIRO: N,res;

        ESCREVA "digite o valor para n:";
        LEIA N;

        res = somacubo(N);

        ESCREVA "A soma é:",res;
    FIM.
FIM.